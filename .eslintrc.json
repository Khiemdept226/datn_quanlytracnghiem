// reference: https://eslint.org/docs/latest/rules
{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "rules": {
    "indent": ["error", 2],
    "semi": ["error", "never"],
    "quotes": ["error", "single"],
    "comma-dangle": 0,
    "vue/no-v-html": 0,
    "vue/max-attributes-per-line": 0,
    "vue/multi-word-component-names": 0,
    "vue/no-multiple-template-root": 0
  }
}
